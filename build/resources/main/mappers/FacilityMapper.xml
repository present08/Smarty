<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.green.smarty.mapper.FacilityMapper">

    <insert id="register" parameterType="FacilityDTO">
        insert into facility (facility_id, facility_name, quantity, open_time, close_time, default_time,
        basic_fee, extra_fee, contact, info, caution, court, facility_status, facility_images)
        values (#{facility_id}, #{facility_name}, #{quantity}, #{open_time}, #{close_time}, #{default_time},
        #{basic_fee}, #{extra_fee}, #{contact}, #{info}, #{caution}, #{court}, #{facility_status}, #{facility_images})
    </insert>

    <insert id="fileUpload" parameterType="String">
        insert into facility_attach (facility_id, file_name) values (#{facility_id}, #{file_name})
    </insert>

    <select id="list" resultType="FacilityDTO">
        select * from facility
    </select>

    <select id="get" resultType="String">
        select * from facility where facility_id=#{facility_id}
    </select>

